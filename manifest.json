{
  "name": "ニコニコマンダー",
  "version": "1.2",
  "manifest_version": 2,
  "description": "ニコニコ動画視聴ページに便利なショートカットキーと機能を追加します。",
  "homepage_url": "https://noraworld.jp/works/niconicommander",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icons/icon48.png"
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://www.nicovideo.jp/watch*"],
      "css": ["script.css"],
      "js": ["jquery.js", "script.js"]
    }
  ]
}
